<%= simple_form_for(@account) do |f| %>
  <% if @account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @account.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-8">
      <%= f.input :name %>
      <%= f.association :owner %>
      <%= f.association :bank %>
      <%= f.input :initial_amount %>
    </div>
    <div class="col-md-4 actions">
      <%= f.submit %>
      <div class="balance <%= @account.balance < 0 ? "balance-negative" : "balance-positive" %>"><%= @account.balance %> €</div>
    </div>
  </div>  
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-2">Date transaction</div>
      <div class="col-md-2">Date débit</div>
      <div class="col-md-2">Tiers</div>
      <div class="col-md-4">Details</div>
      <div class="col-md-1">Montant</div>
      <div class="col-md-1">Delete</div>      
    </div>
  </div>
  <div class="row">
    <%= f.fields_for :account_lines do |account_line| %>
      <%= render partial: 'account_line_fields', locals: { f: account_line, type: :passenger } %>
    <% end %>
    <div class="col-md-12 text-center">
      <%= link_to_add_association 'Ajouter une opération', f, :account_lines, render_options: { locals: {type: :passenger} }, class: "btn btn-primary" %>
      <div class="actions">
      <%= f.submit %>
    </div>
    </div>
  </div>
<% end %>


